{
  "name": "notes-info",
  "version": "1.0.0",
  "description": "Personal notes application",
  "main": "server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node server",
    "server": "cross-env NODE_ENV=development nodemon server",
    "frontend": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run frontend\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
  },
  "nodemonConfig": {
    "ignore": [
      "frontend"
    ]
  },
  "author": "Zhaohe Song",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.4"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "chalk": "^4.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.18",
    "nodemailer": "^6.4.10",
    "uuid": "^8.1.0",
    "websocket": "^1.0.32"
  }
}
